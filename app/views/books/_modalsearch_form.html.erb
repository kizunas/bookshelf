<div class="modal fade" id="bookModal" tabindex="-1" role="dialog" aria-labelledby="bookModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_with(model: books, method: :get, url: search_path, remote: true) do |form| %>
        <div class="modal-header">
          <h5 class="modal-title" id="bookModal"><%= "#{params[:action].camelize} #{books.model_name.human}title" %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="book-list">
              <% books.each do |books| %>
              <%= books.title %>
               <% if books == 0 %>
               <p>検索結果がありませんでした</p>
               <% end %>
              <% end %>
          </div> 
        </div>
      <% end %>
    </div>
  </div>
</div>

  
