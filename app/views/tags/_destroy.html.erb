<div class="modal fade" id="bookModal" tabindex="-1" role="dialog" aria-labelledby="bookModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_with(model: tag, method: :delete, remote: true) do |form| %>
        <div class="modal-header">
          <h5 class="modal-title" id="bookModal">本当に削除しますか？</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <% if tag.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(tag.errors.count, "件のエラー") %> があります。以下の理由で登録できません:</h2>
              <ul>
                <% tag.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
        <div class="modal-footer actions">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          <button type="submit" class="btn btn-outline-danger btndel" id="">削除</button>
           <button id="hidden" class="btn btn-danger ary" type="button" disabled>
             <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            Loading...
           </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  $('.btndel').on('click',function(){
    $('.btndel').attr('id', 'hidden');
    $('.ary').attr('id', 'append');
  })
</script>